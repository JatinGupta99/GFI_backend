# =============================
# Node / App Config
# =============================
NODE_ENV=development
PORT=4010
LOG_LEVEL=info
FRONTEND_URL=http://localhost:3002

# =============================
# MongoDB
# =============================
MONGO_URI=mongodb://admin:secret@localhost:27017?authSource=admin
MONGO_DB_NAME=melonleaf_gfi

# =============================
# JWT / Auth
# =============================
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1h
RESET_TOKEN_EXPIRY_MINUTES=15
BCRYPT_SALT_ROUNDS=12

# =============================
# Redis / Queue (Required for Document Processing)
# =============================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# =============================
# AWS S3 (File Storage)
# =============================
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# =============================
# Google Document AI (New)
# =============================
GOOGLE_DOCUMENT_AI_PROJECT_ID=your-google-project-id
GOOGLE_DOCUMENT_AI_LOCATION=us # or eu
GOOGLE_DOCUMENT_AI_PROCESSOR_ID=your-processor-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# =============================
# Media Upload
# =============================
MEDIA_MAX_FILE_SIZE_MB=5
MEDIA_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# =============================
# Mail / SMTP Configuration
# =============================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com       
SMTP_PASS=your_app_password
MAIL_FROM="MelonLeaf Consulting <your_email@gmail.com>"

# Note: MAIL_HOST, MAIL_PORT, MAIL_USER, MAIL_PASS are aliases for SMTP_*
# You can use either SMTP_* or MAIL_* variables (they're the same)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_app_password

# =============================
# DocuSign Integration
# =============================
# Get credentials from https://developers.docusign.com/
# See src/modules/integration/docusign/README.md for setup guide

# Integration Key from DocuSign Admin → Settings → Apps and Keys
DOCUSIGN_INTEGRATION_KEY=your_docusign_integration_key

# User ID from DocuSign Admin → Settings → My Account → API and Keys
DOCUSIGN_USER_ID=your_docusign_user_id

# Account ID from DocuSign Admin (found in URL or API and Keys section)
DOCUSIGN_ACCOUNT_ID=your_docusign_account_id

# RSA Private Key (generate in DocuSign Admin → Settings → Apps and Keys → Add RSA Keypair)
# Keep the newlines as \n in the string
DOCUSIGN_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nyour_private_key_here\n-----END RSA PRIVATE KEY-----"

# Base path for DocuSign API
# Production: https://www.docusign.net/restapi
# Demo/Development: https://demo.docusign.net/restapi
DOCUSIGN_BASE_PATH=https://demo.docusign.net/restapi

# Webhook secret for HMAC validation (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
DOCUSIGN_WEBHOOK_SECRET=your_webhook_secret

# Storage strategy for signed documents: 's3' or 'database' (default: database)
STORAGE_STRATEGY=s3

# Enhancement 4: Envelope expiration settings (optional)
# Enable envelope expiration (true/false)
DOCUSIGN_ENVELOPE_EXPIRE_ENABLED=true
# Number of days before envelope expires (default: 30)
DOCUSIGN_ENVELOPE_EXPIRE_DAYS=30

# =============================
# Legacy / Client Specific
# =============================
CLIENT_ID=N362999
DATABASE_NAME=GLOBALTRAIN
WEB_SERVICE_USER_ID=GCWSUSER
WEB_SERVICE_USER_PASSWORD=password
DEVELOPER_API_KEY=api_key