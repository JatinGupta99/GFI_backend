# =============================
# Node / App Config
# =============================
NODE_ENV=development
PORT=4010
LOG_LEVEL=debug
FRONTEND_URL=http://localhost:3002

# =============================
# MongoDB
# =============================
MONGO_URI=mongodb://admin:secret@localhost:27017?authSource=admin
MONGO_DB_NAME=melonleaf_gfi_dev

# =============================
# JWT / Auth
# =============================
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_EXPIRES_IN=24h
RESET_TOKEN_EXPIRY_MINUTES=15
BCRYPT_SALT_ROUNDS=10

# =============================
# Redis / Queue (Required for Document Processing)
# =============================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# =============================
# AWS S3 (File Storage)
# =============================
AWS_ACCESS_KEY_ID=your_dev_access_key
AWS_SECRET_ACCESS_KEY=your_dev_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=melonleaf-dev-bucket

# =============================
# Google Document AI
# =============================
GOOGLE_DOCUMENT_AI_PROJECT_ID=your-google-project-id
GOOGLE_DOCUMENT_AI_LOCATION=us
GOOGLE_DOCUMENT_AI_PROCESSOR_ID=your-processor-id
GOOGLE_APPLICATION_CREDENTIALS=credentials/doc-ai.json

# =============================
# Media Upload
# =============================
MEDIA_MAX_FILE_SIZE_MB=5
MEDIA_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# =============================
# Mail / SendGrid SMTP
# =============================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=dev@example.com
SMTP_PASS=your_app_password
MAIL_FROM="MelonLeaf Dev <dev@example.com>"

